.side-bar
  .side-bar__header
    .side-bar__items
      .side-bar__items--name
        = current_user.name
      .side-bar__items--box
        .side-bar__edit
          = link_to new_group_path do
            = icon('far', 'edit', class: "side-bar__btn--icon")
        .side-bar__cog
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: "side-bar__btn--icon")
  .group-list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group-list__contens  
            .group-list__contens--name
              = group.name
            .group-list__contens--message
              = group.show_last_message

